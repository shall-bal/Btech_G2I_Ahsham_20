#include <stdio.h>
int main(){
    int n,sum=0,i;
    printf("Enter some positive values = ");
    scanf("%d",&n);
    switch (n > 0)
    {
        case 1:for(i=1;i<=n;i++){
            sum = sum +i;
        }
        printf("Sum of numbers from 1 to %d = %d",n,sum);
        break;
        case 0: printf("Please enter a positive number");
        break;
        
    }
    return 0;
}

